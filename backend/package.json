    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "googleapis": "^155.0.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "openai": "^5.12.2",
    "pg": "^8.16.3",
    "playwright": "^1.54.2",
    "redis": "^5.8.0",
    "uuid": "^11.1.0"
  },
