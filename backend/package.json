    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
