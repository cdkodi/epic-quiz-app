  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:create": "createdb epic_quiz_test",
    "db:drop": "dropdb epic_quiz_test --if-exists"
  },
  "keywords": [
    "epic",
    "quiz",
    "education",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend API for Epic Quiz App - Educational quiz platform for classical literature",
