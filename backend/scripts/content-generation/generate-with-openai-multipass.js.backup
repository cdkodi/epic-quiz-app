  async generateContent(inputFilename, useMultipass = false) {
    console.log(`ü§ñ Starting ${useMultipass ? 'Multi-Pass' : 'Standard'} OpenAI content generation...`);
    
    // Ensure output directories exist
    await Promise.all([
